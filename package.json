{
  "name": "knightly",
  "version": "0.4.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "rimraf dist && npm run build",
    "dev": "KNIGHTLY_DEBUG=true esno src/cli.ts --dry-run",
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "release": "npx bumpp --commit --push --tag && npm publish"
  },
  "bin": {
    "knightly": "bin/knightly.js"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "dependencies": {
    "@octokit/rest": "^18.0.6",
    "chalk": "^4.1.0",
    "dayjs": "^1.9.1",
    "debug": "^4.2.0",
    "fast-glob": "^3.2.4",
    "fs-extra": "^9.0.1",
    "js-yaml": "^3.14.0",
    "pacote": "^11.1.11",
    "param-case": "^3.0.3",
    "semver": "^7.3.2",
    "simple-git": "^2.21.0",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config-ts": "^0.3.3",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.1",
    "@types/js-yaml": "^3.12.5",
    "@types/node": "^14.11.8",
    "@types/pacote": "^11.1.0",
    "@types/semver": "^7.3.4",
    "@types/yargs": "^15.0.8",
    "eslint": "^7.11.0",
    "esno": "^0.2.0",
    "rimraf": "^3.0.2",
    "tsup": "^3.7.0",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config-ts"
  }
}
